#include<stdio.h>
int main()
{
    int  m, n, array[50],first,miidle,last,search;
      printf("Enter total number of elements :");
	scanf("%d",&n);
	printf("Enter %d number :", n);
	for (m=0; m<n; m++)
	{
		scanf("%d",&array[m]);
	}
	printf("Enter a number to find :");
	scanf("%d", &search);
	first = 0;
	last = n-1;
	middle = (first+last)/2;
	while (first <= last)
	{
		if(array[middle] < search)
		{
			first = middle + 1;

		}
		else if(array[middle] == search)
		{
			printf("%d found at location %d\n", search, middle+1);
			break;
		}
		else
		{
			 last = middle - 1;
		}
		middle = (first + last)/2;
	}
	if(first > last)
	{
		printf("Not found! %d is not present in the list.",search);
 return 0;
}

